@using Schools.Models.ScheduleModels
@model IEnumerable<ScheduleModel>

@{
    var isEmpty = !Model.Any();
}
@if (!isEmpty)
{
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>Schedule
                </div>
                <div class="tools">
                        <a href="@Url.Action("Edit", "Schedule")" class="btn btn-default btn-sm" style="height: auto;">
                            <i class="fa fa-pencil"></i> Edit Schedule
                        </a>
                    <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th> Monday </th>
                                <th> Tuesday </th>
                                <th> Wednesday </th>
                                <th> Thursday </th>
                                <th> Friday </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int order = 1; order < 7; order++)
                            {
                                <tr>
                                    @for (int day = 1; day < 6; day++)
                                    {
                                        <td>@Model.FirstOrDefault(s => s.Order == order && s.Day == day).SubjectName</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
}
else
{
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>Schedule
                </div>
                <div class="tools">
                        <a href="@Url.Action("Create", "Schedule")" class="btn btn-default btn-sm" style="height: auto;">
                            <i class="fa fa-pencil"></i> Create Schedule
                        </a>
                    <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th> Monday </th>
                                <th> Tuesday </th>
                                <th> Wednesday </th>
                                <th> Thursday </th>
                                <th> Friday </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
}
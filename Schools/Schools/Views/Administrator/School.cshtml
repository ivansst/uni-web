@model Schools.ViewModels.SchoolDataViewModel

<div class="row widget-row">
    <div class="col-md-4">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Teachers</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-green icon-graduation"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.TeacherCount">@Model.Statistics.TeacherCount</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-4">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Students</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-blue icon-users"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.StudentCount">@Model.Statistics.StudentCount</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-4">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Parents</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-purple icon-users"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.ParentCount">@Model.Statistics.ParentCount</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
</div>

<div class="row widget-row">
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Classes</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-green icon-notebook"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.ClassesCount">@Model.Statistics.ClassesCount</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Subjects</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-purple icon-pencil"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.SubjectsCount">@Model.Statistics.SubjectsCount</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">GradeAverage</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-blue icon-trophy"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.GradeAverage">@Model.Statistics.GradeAverage</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Absences</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-red icon-user-unfollow"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="@Model.Statistics.Absences">@Model.Statistics.Absences</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
</div>


<div class="col-sm-12">
    <div class="portlet blue-hoki box">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i> School Data
            </div>
            <div class="actions">
                <a href="@Url.Action("Edit", "School", new { schoolId = Model.School.Id })" class="btn btn-default btn-sm">
                    <i class="fa fa-pencil"></i> Edit
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row static-info">
                <div class="col-md-5 name"> School: </div>
                <div class="col-md-7 value"> @Model.School.Name </div>
            </div>
            <div class="row static-info">
                <div class="col-md-5 name"> Address </div>
                <div class="col-md-7 value"> @Model.School.Address </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Principal.Role != null)
{
    <div class="col-sm-12">
        <div class="portlet blue-hoki box">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Principal
                </div>
                <div class="actions">
                    <a href="@Url.Action("EditPrincipal", "Administrator", new { schoolId = Model.School.Id })" class="btn btn-default btn-sm">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row static-info">
                    <div class="col-md-5 name"> First Name: </div>
                    <div class="col-md-7 value"> @Model.Principal.UserEditModel.FirstName </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name"> Middle Name: </div>
                    <div class="col-md-7 value"> @Model.Principal.UserEditModel.MiddleName </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name"> Last Name: </div>
                    <div class="col-md-7 value"> @Model.Principal.UserEditModel.LastName </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-sm-12">
        <div class="portlet blue-hoki box">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Principal
                </div>
                <div class="actions">
                    <a href="@Url.Action("CreatePrincipal", "Administrator")" class="btn btn-default btn-sm">
                        <i class="fa fa-pencil"></i> Create
                    </a>
                </div>
            </div>
            <div class="portlet-body">
            </div>
        </div>
    </div>
   
}



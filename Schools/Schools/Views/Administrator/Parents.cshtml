@using Schools.Data.Models
@model IEnumerable<User>

<div class="col-md-12">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-table"></i>Parents
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-advance table-hover">
                    <thead>
                        <tr>
                            <th>
                                <i class="fa fa-briefcase"></i> First Name
                            </th>
                            <th class="hidden-xs">
                                <i class="fa fa-briefcase"></i> Middle Name
                            </th>
                            <th>
                                <i class="fa fa-briefcase"></i> Last Name
                            </th>
                            <th class="hidden-xs">
                                <i class="fa fa-envelope-o"></i> Email
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var parent in Model)
                        {
                            <tr>
                                <td>
                                    @parent.FirstName
                                </td>
                                <td class="hidden-xs">
                                    @parent.MiddleName
                                </td>
                                <td>
                                    @parent.LastName
                                </td>
                                <td class="hidden-xs">
                                    @parent.Email
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Parent", new { userId = parent.Id })" class="btn dark btn-sm btn-outline sbold uppercase">
                                        <i class="fa fa-share"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
</div>
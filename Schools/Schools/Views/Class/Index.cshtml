@model Schools.ViewModels.ClassViewModel

<div class="col-md-12">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-table"></i>Classes
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-advance table-hover">
                    <thead>
                        <tr>
                            <th>
                                <i class="fa fa-user"></i> Name
                            </th>
                            <th>
                                <i class="fa fa-bookmark"></i> Group
                            </th>
                            <th>
                                <i class="fa fa-bookmark"></i> SchoolId
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Classes)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td> @item.Group </td>
                                <td> @item.SchoolId</td>
                                <td>
                                    <a href="<%=Url.Action("Edit", "Class", new { id = @item.Id }) %>" class="btn dark btn-sm btn-outline sbold uppercase">
                                        <i class="fa fa-share"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
            </div>
        </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
</div>
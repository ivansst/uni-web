@model Schools.ViewModels.ClassSaveViewModel

<div class="col-md-12">
    <div class="portlet box blue-hoki">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Add Class
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form asp-controller="Class" asp-action="Save" class="form-horizontal">
                <div class="form-body">

                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-4">
                            <input asp-for="ClassCreateRequestModel.Name" type="text" class="form-control" placeholder="Name">
                            <span class="help-block"> Enter user first name. </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Group</label>
                        <div class="col-md-4">
                            <input asp-for="ClassCreateRequestModel.Group" type="text" class="form-control" placeholder="Group">
                            <span class="help-block"> Enter user middle name. </span>
                        </div>
                    </div>

                    <input type="hidden" value="" asp-for="ClassCreateRequestModel.SchoolId" />

                    <div class="form-group">
                        <label class="col-md-3 control-label">Subjects</label>
                        <div class="col-md-4">
                            <select asp-for="Subjects" class="form-control multi-select" multiple>
                                @foreach (var item in Model.Subjects)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <input hidden asp-for="Subjects" value="@Model.Subjects"/>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Submit</button>
                            <button type="reset" class="btn default">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>

</div>

